{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "ecmaFeatures": {
      "destructuring": true,
    },
    "extends": "eslint:recommended",
    "globals": {
        "define": false
    },
    "rules": {
        "camelcase" : [
            1,
            { "properties": "always" }
        ],
        "indent": [
            1,
            2
        ],
        "linebreak-style": [
            1,
            "unix"
        ],
        "no-unused-vars": [
            1,
            {
                "vars": "all",
                "args": "none"
            }
        ],
        "quotes": 0,
        "semi": [
            1,
            "always"
        ]
    }
}
